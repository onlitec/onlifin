# üê≥ Dockerfile de Produ√ß√£o - Onlifin com API
FROM php:8.2-fpm-alpine

# Informa√ß√µes da imagem
LABEL maintainer="Onlifin Team <galvatec@gmail.com>"
LABEL version="2.0.0"
LABEL description="Onlifin Financial Platform with Complete API"

# Instalar depend√™ncias do sistema
RUN apk add --no-cache \
    nginx \
    supervisor \
    curl \
    zip \
    unzip \
    git \
    sqlite \
    sqlite-dev \
    mysql-client \
    postgresql-client \
    redis \
    nodejs \
    npm \
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    && rm -rf /var/cache/apk/*

# Instalar extens√µes PHP necess√°rias para API
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install \
    pdo \
    pdo_mysql \
    pdo_sqlite \
    bcmath \
    opcache \
    pcntl \
    gd

# Instalar Redis extension
RUN apk add --no-cache --virtual .build-deps $PHPIZE_DEPS \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apk del .build-deps

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configurar diret√≥rio de trabalho
WORKDIR /var/www/html

# Copiar arquivos de configura√ß√£o
COPY docker/nginx.conf /etc/nginx/nginx.conf
COPY docker/default.conf /etc/nginx/http.d/default.conf
COPY docker/php-fpm.conf /usr/local/etc/php-fpm.d/www.conf
COPY docker/php.ini /usr/local/etc/php/php.ini
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Copiar c√≥digo da aplica√ß√£o
COPY . .

# Instalar depend√™ncias PHP
RUN composer install --no-dev --optimize-autoloader --no-interaction

# Instalar depend√™ncias Node.js (se necess√°rio)
RUN npm install && npm run build

# Configurar permiss√µes
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 /var/www/html/storage \
    && chmod -R 775 /var/www/html/bootstrap/cache

# Criar diret√≥rios necess√°rios
RUN mkdir -p /var/log/nginx \
    && mkdir -p /var/log/php-fpm \
    && mkdir -p /run/nginx \
    && mkdir -p /var/www/html/database \
    && touch /var/www/html/database/database.sqlite \
    && chown www-data:www-data /var/www/html/database/database.sqlite

# Otimiza√ß√µes para produ√ß√£o
RUN php artisan config:cache \
    && php artisan route:cache \
    && php artisan view:cache

# Script de inicializa√ß√£o
COPY docker/start-production.sh /start.sh
RUN chmod +x /start.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost/api/docs || exit 1

# Expor portas
EXPOSE 80 443

# Comando de inicializa√ß√£o
CMD ["/start.sh"]
