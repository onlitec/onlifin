# Configuração de ambiente para Docker - Onlifin
# Copie este arquivo para .env e ajuste conforme necessário

APP_NAME=Onlifin
APP_ENV=production
APP_KEY=base64:BWpq/ALZKR/PNKESEajSmIAPfjZfPvrYXi27oWRTZUk=
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:8080

APP_LOCALE=pt-BR
APP_FALLBACK_LOCALE=pt-BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Banco de dados - SQLite (padrão para Docker)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Para usar MySQL (descomente e configure)
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=onlifin
# DB_USERNAME=onlifin_user
# DB_PASSWORD=onlifin_password

# Para usar PostgreSQL (descomente e configure)
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=onlifin
# DB_USERNAME=onlifin_user
# DB_PASSWORD=onlifin_password

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=file
CACHE_PREFIX=onlifin_

MEMCACHED_HOST=127.0.0.1

# Redis (se habilitado)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email (para desenvolvimento use MailHog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@onlifin.local"
MAIL_FROM_NAME="${APP_NAME}"

# Para produção, configure um provedor real
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=seu-email@gmail.com
# MAIL_PASSWORD=sua-senha-app
# MAIL_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Google Cloud Document AI Configuration
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_LOCATION=us
GOOGLE_CLOUD_PROCESSOR_ID=
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_API_ENDPOINT=https://documentai.googleapis.com
GOOGLE_CLOUD_TIMEOUT=30

# Configurações de IA (OpenRouter, Anthropic, etc.)
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# Configurações de autenticação social
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

# Configurações de segurança
SANCTUM_STATEFUL_DOMAINS=localhost:8080
SESSION_DOMAIN=localhost

# Configurações específicas do Docker
DOCKER_APP_PORT=8080
DOCKER_MYSQL_PORT=3306
DOCKER_POSTGRES_PORT=5432
DOCKER_REDIS_PORT=6379
DOCKER_MAILHOG_SMTP_PORT=1025
DOCKER_MAILHOG_WEB_PORT=8025
DOCKER_ADMINER_PORT=8081
